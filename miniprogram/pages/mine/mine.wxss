/* mine.wxss */

.page {
  padding: 20rpx; /* 页面留白 */
}

.user-info {
  padding: 12px 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-avatar-container {
  flex: 1; /* 设置为相等的高度 */
  width: 33.33333vw;
  height: 23.33333vw;
  margin-right: 20rpx; /* 右侧留出一定的间距 */
}

.user-avatar {
  border-radius: 50%;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.user-details {
  flex: 2; /* 设置为相等的高度 */
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 36rpx; /* 用户名字体大小 */
  font-weight: bold; /* 用户名字体加粗 */
  margin-bottom: 10rpx; /* 用户名与个人描述之间的间距 */
}

.edit-btn {
  width: 50px;
  height: 36rpx;
  background-color: #ff4639;
  color: #fff;
  line-height: 36rpx;
  font-size: 24rpx;
  font-weight: bold;
  border-radius: 18rpx; /* 圆角按钮 */
}

.user-description {
  font-size: 24rpx; /* 个人描述字体大小 */
  line-height: 140%; /* 行高 */
  margin-bottom: 10rpx; /* 个人描述与菜品粉丝数量之间的间距 */
}

.user-menuCount,
.user-fansCount {
  font-size: 24rpx; /* 字体大小 */
}

.tab {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx; /* 选项卡与用户信息之间的间距 */
}

.text1,
.text2 {
  font-size: 26rpx; /* 选项卡文字大小 */
  padding: 10rpx 20rpx; /* 选项卡内边距 */
}
