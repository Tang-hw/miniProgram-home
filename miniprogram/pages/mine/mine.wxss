/* mine.wxss */

.page {
  padding: 10rpx; /* 页面留白 */
}


.user-name {
  font-weight: bold; /* 用户名字体加粗 */
}

.edit-btn {
  width: 50px;
  height: 36rpx;
  background-color: #ff4639;
  color: #fff;
  line-height: 36rpx;
  font-size: 24rpx;
  font-weight: bold;
  border-radius: 18rpx; /* 圆角按钮 */
}

.user-description {
  font-size: 28rpx; /* 个人描述字体大小 */
  margin-bottom: 10rpx;
}

.user-menuCount,
.user-fansCount {
  font-size: 32rpx; /* 字体大小 */
}


.dish-info {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.dish-box{
  display: flex;
  justify-content: space-between;
  padding-top: 10rpx;
}

.dish-item {
  width: calc(50% - 20rpx); /* 一行放两个，间距为 20rpx */
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.dish-content {
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow: hidden;
}

.dish-image-container {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.dish-image {
  height: 100px;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  object-fit: cover; /* 图片尺寸超出容器时，保持比例并裁剪 */
}

.dish-details {
  padding: 20rpx;
  padding-top: 0;
}

.dish-user-like-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dish-user-info {
  display: flex;
  align-items: center;
}

.dish-user-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.like-count {
  font-size: 24rpx;
  color: #666;
}

.dish-user-name {
  font-size: 24rpx; /* 调整用户名字体大小 */
  color: #666;
}

.dish-name {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  line-height: 80rpx;
}
