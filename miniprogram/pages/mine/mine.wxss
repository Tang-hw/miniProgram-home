/* pages/mine/mine.wxss */
.page {
  /* 页面样式 */
}

.user-info {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  height: 400rpx; /* 背景图片高度增加 */
}

.user-avatar-container {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 2px solid #fff;
  margin-right: 20rpx; /* 调整右边距 */
}

.user-avatar {
  width: 100%;
  height: 100%;
}

.user-details {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 28rpx; /* 调整字体大小 */
  font-weight: bold; /* 加粗 */
  color: #333;
  margin-bottom: 5rpx; /* 调整间距 */
  white-space: nowrap; /* 防止换行 */
  overflow: hidden; /* 隐藏溢出部分 */
  text-overflow: ellipsis; /* 显示省略号 */
}

.user-description,
.user-count {
  font-size: 24rpx; /* 字体大小一致 */
  color: #666;
  margin-bottom: 10rpx;
  white-space: normal; /* 换行显示 */
}

.edit-btn {
  width: auto;
  min-width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  background-color: #ff7f50;
  text-align: center;
  font-size: 24rpx;
}
