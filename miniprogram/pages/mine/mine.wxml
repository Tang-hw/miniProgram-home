<!-- mine.wxml -->
<view class="page">
  <!-- 顶部用户信息展示 -->
  <view class="user-info" style="background-image: url('{{backgroundImage}}')">
    <view class="user-avatar-container">
      <image class="user-avatar" src="{{userAvatar}}" mode=""></image>
    </view>
    <view class="user-details">
      <text class="user-name">{{userName}}</text>
      <button class="edit-btn" bindtap="gotoEditUserInfo">编辑</button>
      <text class="user-description">{{personalDescription}}</text>
      <text class="user-menuCount">菜品：{{dishCount}} </text>
      <text class="user-fansCount">粉丝：{{fansCount}} </text>
    </view>
  </view>

   <!-- 食谱 / 喜欢 导航 -->
   <view class="tab">
    <view class="text1" bindtap="selectTab" data-tab="dishes"> <text>食谱</text> </view>
    <view class="text2" bindtap="selectTab" data-tab="likes"> <text>喜欢</text> </view>
  </view>

  <!-- 食谱 -->
  <view class="dishes" wx:if="{{selectedTab === 'dishes'}}">
    <!-- 菜品信息展示 -->
    
  </view>


  <!-- 喜欢 -->
  <view class="likes" wx:if="{{selectedTab === 'likes'}}">

</view>
  
</view>
