<!-- mine.wxml -->
<view class="page">
  <!-- 顶部用户信息展示 -->
  <view class="user-info" style="background-image: url('{{backgroundImage}}')">
    <view class="user-avatar-container">
      <image class="user-avatar" src="{{userAvatar}}" mode="aspectFill"></image>
    </view>
    <view class="user-details">
      <text class="user-name">{{userName}}</text>
      <text class="user-description">{{personalDescription}}</text>
      <text class="user-count">菜品：{{dishCount}}  粉丝：{{fansCount}}</text>
    </view>
    <button class="edit-btn" bindtap="gotoEditUserInfo">编辑按钮</button>
  </view>

  <!-- 其他页面内容 -->
</view>
